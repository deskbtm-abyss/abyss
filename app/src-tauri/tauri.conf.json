{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "yarn build",
    "beforeDevCommand": "yarn dev",
    "withGlobalTauri": true,
    "devPath": "http://127.0.0.1:5173/app/src/",
    "distDir": "../dist"
  },
  "package": {
    "productName": "abyss",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "protocol": {
        "all": true,
        "asset": true,
        "assetScope": [
          "**"
        ]
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.deskbtm.abyss",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src 'self' asset: https://asset.localhost'",
      "devCsp": "default-src 'self' asset: https://asset.localhost'"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "url": "app/src",
        "fullscreen": false,
        "height": 600,
        "width": 850,
        "minHeight": 600,
        "minWidth": 850,
        "resizable": true,
        "center": true,
        "transparent": true,
        "decorations": true,
        "title": "abyss"
      }
    ]
  }
}